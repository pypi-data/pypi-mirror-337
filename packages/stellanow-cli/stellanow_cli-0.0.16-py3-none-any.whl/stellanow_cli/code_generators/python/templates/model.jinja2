from pydantic import Field
{%- set included_types = [] %}
{%- for field in spec.fields %}
{%- if field.type_str in ['date', 'datetime'] and field.type_str not in included_types %}
from datetime import {{ field.type_str }}
{%- do included_types.append(field.type_str) %}
{% endif %}
{%- endfor %}
from stellanow_sdk_python.messages.base import StellaNowBaseModel
{% for model in spec.referenced_models -%}
from .{{ model | get_model_file_name }} import {{ model }}Model
{% endfor %}

class {{ spec.name | pascal_case }}Model(StellaNowBaseModel):
    {%- for field in spec.fields %}
    {{ field.mapped_name }}: {{ field.type_str }} = Field(None, serialization_alias='{{ field.original_name }}')
    {%- endfor %}

