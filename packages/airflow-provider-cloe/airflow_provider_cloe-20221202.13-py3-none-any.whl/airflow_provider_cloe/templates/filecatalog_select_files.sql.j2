{% elif file_status in (2, 3) %}SELECT CONCAT(FilePath, FileName) AS name
{% endif %}FROM orc_dwh.FileCatalog
{% if file_status == 1 %}WHERE FileStatus = 1 AND lock_uuid = '{{ file_lock_uuid }}'
