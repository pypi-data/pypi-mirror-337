SELECT
    s.[TABLE_SCHEMA],
    s.[TABLE_NAME],
    s.[COLUMN_NAME],
    s.[ORDINAL_POSITION],
    s.[IS_NULLABLE],
    s.[COLUMN_DEFAULT],
    s.[DATA_TYPE],
    s.[CHARACTER_MAXIMUM_LENGTH],
    s.[NUMERIC_PRECISION],
    s.[NUMERIC_SCALE]
FROM [{{ database_name }}].[INFORMATION_SCHEMA].[COLUMNS] s
INNER JOIN [{{ database_name }}].[INFORMATION_SCHEMA].[TABLES] t
    ON t.[TABLE_SCHEMA] = s.[TABLE_SCHEMA] AND t.[TABLE_NAME] = s.[TABLE_NAME] AND t.[TABLE_TYPE] = 'BASE TABLE'
WHERE t.[TABLE_SCHEMA] <> 'INFORMATION_SCHEMA'
ORDER BY s.[TABLE_SCHEMA], s.[TABLE_NAME], s.[ORDINAL_POSITION]
