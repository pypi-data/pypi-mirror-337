{% if html_id is not defined %}
    {% set html_id = generate_html_id() %}
{% endif %}
<div class="form-check{% if html_class is defined %} {{ html_class | join(' ') }}{% endif %}">
    <input class="form-check-input" type="checkbox" value="{{ checkbox_value }}" id="{{ html_id }}"{% if checkbox_checked | default(false) %} checked{% endif %}>
    <label class="form-check-label" for="{{ html_id }}">{{ checkbox_label }}</label>
</div>
