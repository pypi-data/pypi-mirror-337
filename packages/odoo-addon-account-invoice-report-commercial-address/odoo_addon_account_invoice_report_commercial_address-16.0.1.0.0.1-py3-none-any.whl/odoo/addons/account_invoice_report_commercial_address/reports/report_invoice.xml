<odoo>
    <template
        id="account_invoice_report_commercial_address_report_invoice_document"
        name="account.invoice.report.commercial.address.report.invoice.document"
        inherit_id="account.report_invoice_document"
    >
            <xpath expr="//div[@id='total']" position="inside">
                <div class="commercial-address position-absolute start-0 ms-3 small">
                    <t t-if="o.show_commercial_entity">
                        <span>
                            <address
                            t-field="o.partner_id.commercial_partner_id"
                            t-options='{"widget": "contact", "fields": ["name", "address"]}'
                        />
                        </span>
                    </t>
                </div>
            </xpath>
    </template>
</odoo>
